{
    "extends": ["plugin:prettier/recommended"],
    "env": {
      "es6": true,
      "commonjs": true,
      "node": true,
      "mocha": true
    },
    "rules": {
      "linebreak-style": ["error", "windows"],
      "no-undef": "error",
      "no-unused-vars": "error"
    },
    "parser": "@babel/eslint-parser",
    "parserOptions": {
      "sourceType": "module"
    }
}